@{
    ViewBag.Title = "New";
}
<script>
    window.onload = displayLoad;
    function displayLoad() {
        var formHandle = document.forms.form_data;
        formHandle.onsubmit = processForm;

        function processForm() {
            var TeacherFname = formHandle.TeacherFname;
            var TeacherLname = formHandle.TeacherLname;;
            var EmployeeNumber = formHandle.EmployeeNumber;
            var HireDate = formHandle.HireDate;
            var Salary = formHandle.Salary;

            if (TeacherFname === "") {               
                alert("Please Enter First name ");
                TeacherFname.focus();
                return false;
            }
            if (TeacherLname === "") {

                alert("Please Enter Last name ");
                TeacherLname.focus();
                return false;
            }
            if (EmployeeNumber === "") {

                alert("Please Enter Employee Number ");
                EmployeeNumber.focus();
                return false;
            }
            if (HireDate === "") {

                alert("Please Enter Hiring Date ");
                HireDate.focus();
                return false;
            }
            if (Salary === "") {

                alert("Please Enter Salary ");
                Salary.focus();
                return false;
            }
         
        }
    }
   </script>

<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/List">Back To Teachers</a>
    </nav>
    <h2>New Teacher</h2>
    <form method="POST" action="/Teacher/Create" name="form_data">
        <div class="inputrow">
            <label for="TeacherFname">First Name:</label>
            <input type="text" id="TeacherFname" name="TeacherFname" />

        </div>
        <div class="inputrow">
            <label for="TeacherLname">Last Name:</label>
            <input type="text" id="TeacherLname" name="TeacherLname" />

        </div>

        <div class="inputrow">
            <label for="EmployeeNumber">Employee Number:</label>
            <input type="text" id="EmployeeNumber" name="EmployeeNumber" />
        </div>
        <div class="inputrow">
            <label for="HireDate">Hire Date:</label>
            <input type="text" id="HireDate" name="HireDate" />
        </div>
        <div class="inputrow">
            <label for="Salary">Salary:</label>
            <input type="text" id="Salary" name="Salary" />
        </div>
        <div class="inputrow">
            <input type="submit" value="Create Teacher" />
        </div>
    </form>
</div>