@model Cumulative_HTTP5112.Models.Teacher
@{
    ViewBag.Title = "Update";
}

<script>
    window.onload = displayLoad;
    function displayLoad() {
        var formHandle = document.forms.update_form;
        formHandle.onsubmit = processForm;

        function processForm() {
            var TeacherFname = formHandle.TeacherFname;
            var TeacherLname = formHandle.TeacherLname;;
            var EmployeeNumber = formHandle.EmployeeNumber;
            var HireDate = formHandle.HireDate;
            var Salary = formHandle.Salary;

            if (TeacherFname === "") {
                alert("Please Enter First name ");
                TeacherFname.focus();
                return false;
            }
            if (TeacherLname === "") {

                alert("Please Enter Last name ");
                TeacherLname.focus();
                return false;
            }
            if (EmployeeNumber === "") {

                alert("Please Enter Employee Number ");
                EmployeeNumber.focus();
                return false;
            }
            if (HireDate === "") {

                alert("Please Enter Hiring Date ");
                HireDate.focus();
                return false;
            }
            if (Salary === "") {

                alert("Please Enter Salary ");
                Salary.focus();
                return false;
            }

        }
    }
</script>
<!-- Server Side Validation Error Message -->
@if (ViewBag.Result != null && ViewBag.Result is int)
{
    if (ViewBag.Result == 0)
    {
        <div class="alert alert-danger">Validation failed: Please check the input data.</div>
    }
    else if (ViewBag.Result == -1)
    {
        <div class="alert alert-danger">An error occurred during validation.</div>
    }
}

<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/Show/@Model.TeacherId">Back To Teachers</a>
    </nav>
    <h2>Update Teacher Details</h2>
    <form method="POST" action="/Teacher/Update/@Model.TeacherId" name="update_form">
        <div class="inputrow">
            <label for="TeacherFname">First Name:</label>
            <input type="text" id="TeacherFname" name="TeacherFname" value="@Model.TeacherFname">"

        </div>
        <div class="inputrow">
            <label for="TeacherLname">Last Name:</label>
            <input type="text" id="TeacherLname" name="TeacherLname" value="@Model.TeacherLname" />

        </div>

        <div class="inputrow">
            <label for="EmployeeNumber">Employee Number:</label>
            <input type="text" id="EmployeeNumber" name="EmployeeNumber" value="@Model.EmployeeNumber" />
        </div>
        <div class="inputrow">
            <label for="HireDate">Hire Date:</label>
            <input type="text" id="HireDate" name="HireDate" value="@Model.HireDate" />
        </div>
        <div class="inputrow">
            <label for="Salary">Salary:</label>
            <input type="text" id="Salary" name="Salary" value="@Model.Salary" />
        </div>
        <div class="inputrow">
            <input type="submit" value="Update" />
        </div>
    </form>
</div>